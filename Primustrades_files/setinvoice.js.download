set = {};

set.proccess = function() {
    var searchInput = $("#searchInput");
    
    searchInput.on("keyup", function() {
        
        $.post(URL+"Thinklala/getUser", {client: $(this).val()}, function(response, status) {
            if (status === "success") {
                
                try {
                    var json = JSON.parse(response);
                    var searchData = $("#searchData");
                    var action = URL+"Thinklala/setPayment";
                    if (json.fullname)  {
                        searchData.html(
                            '<table class="table table-bordered">'+
                                '<tr>'+
                                    '<th style="width: 10px">#</th>'+
                                    '<th>Full name</th>'+
                                    '<th>Create Invoice</th>'+
                                '</tr>'+
                                '<tr>'+
                                    '<td>1</td>'+
                                    '<td>'+json.fullname+'</td>'+
                                    '<td>'+
                                        '<form method="post" action="'+action+'">'+
                                            '<input type="hidden" name="pid" value="'+json.pid+'">'+
                                            '<input type="text" name="amount" placeholder="Enter the amount the client should pay" class="form-control">'+
                                            '<button class="btn btn-primary">Create Invoice</button>'+
                                        '</form>'+
                                    '</td>'+
                                '</tr>'+
                            "</table>"
                        );
                    } else {
                        searchData.text("User not found");
                    }
                        

                       

                    // $.each(json, (obj, index) => {
                    //     console.log(json.pid);
                    // });

                } catch(e) {
                   
                }
                    


            }
        });
    });
};
